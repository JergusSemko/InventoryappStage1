<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_margin"
    tools:context=".EditorActivity">

    <EditText
        android:id="@+id/edit_item_name"
        style="@style/EditorFieldStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/hint_item_name"
        android:inputType="textCapWords" />

    <EditText
        android:id="@+id/edit_item_price"
        style="@style/EditorFieldStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_item_name"
        android:hint="@string/hint_item_price"
        android:inputType="textCapWords" />

    <EditText
        android:id="@+id/edit_item_quantity"
        style="@style/EditorFieldStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_item_price"
        android:hint="@string/hint_item_name"
        android:inputType="textCapWords" />

    <EditText
        android:id="@+id/edit_item_supplier"
        style="@style/EditorFieldStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_item_quantity"
        android:hint="@string/hint_item_name"
        android:inputType="textCapWords" />

    <EditText
        android:id="@+id/edit_item_phone"
        style="@style/EditorFieldStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_item_supplier"
        android:hint="@string/hint_item_name"
        android:inputType="textCapWords" />

    <EditText
        android:id="@+id/edit_item_descr"
        style="@style/EditorFieldStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_item_phone"
        android:hint="@string/hint_item_name"
        android:inputType="textCapWords" />

</RelativeLayout>
